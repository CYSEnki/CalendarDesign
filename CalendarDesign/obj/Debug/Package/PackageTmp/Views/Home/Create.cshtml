@model CalendarDesign.Models.CalendarDT

@{
    ViewBag.Title = "Create";
}
<!doctype html>
<html lang="ch">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

    <!-- Optional JavaScript; choose one of the two! -->
    <!-- Option 1: jQuery and Bootstrap Bundle (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>

</head>
<body>
    <div class="container">
        @using (Html.BeginForm("Create", "Home"))
        {
            <div class="center-block text-left">
                <form method="post">
                    <div class="form-row center-block">
                        <div class="col-1">
                        </div>
                        <div class="col-10 h6" style="padding-top:10px;">
                            <label for="Title"><strong>主旨</strong></label>
                            @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Title)
                        </div>
                        <div class="col-1">
                        </div>
                    </div>
                    <div class="form-row text-center">
                        <div class="col-1">
                        </div>
                        <div class="col-10 h6 text-left" style="padding-top:10px;">
                            <label for="NoteDate"><strong>日期</strong></label>
                            @*@Html.TextBoxFor(model => model.Date, new { @class = "form-control" })*@
                            <input class="form-control" type="date" id="date" name="Date" />
                        </div>
                        <div class="col-1">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="col-1">
                        </div>
                        <div class="form-group col-6 h6" style="padding-top:10px;">
                            <label for="StartTime" , class="text-left"><strong>行程開始</strong></label>
                            @*@Html.TextBoxFor(model => model.StartTime, new { @class = "form-control" })*@
                            <input class="form-control" type="time" id="time" name="StartTime" />
                        </div>
                        <div class="form-group col-4 h6" style="padding-top:10px;">
                            <label for="NoteSort"><strong>類別</strong></label>
                            <select id="Sort" name="Sort" class="form-control">
                                <option>工作</option>
                                <option>活動</option>
                                <option>學習</option>
                                <option>家庭</option>
                            </select>
                        </div>
                        <div class="col-1">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-1">
                        </div>
                        <div class="form-group col-6 h6" style="padding-top:10px;">
                            <label for="Endtime"><strong>行程結束</strong></label>
                            @*@Html.TextBoxFor(model => model.EndTime, new { @class = "form-control" })*@
                            <input class="form-control" type="time" id="time" name="EndTime" />
                        </div>
                        <div class="form-group col-4 h6" style="padding-top:10px;">
                            <label for="NoteStatus"><strong>狀態</strong></label>
                            <select id="Sort" name="Status" class="form-control">
                                <option>記事</option>
                                <option>一般</option>
                                <option>重要</option>
                                <option>緊急</option>
                            </select>
                        </div>
                        <div class="col-1">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-1">
                        </div>
                        <div class="col-10 h6" style="padding-top:10px;">
                            <label for="Article"><strong>內容</strong></label>
                            @Html.TextAreaFor(model => model.Article, new { @class = "form-control height:150px" })
                            <div class="invalid-feedback">
                                Please enter a message in the textarea.
                            </div>
                        </div>
                        <div class="col-1">
                        </div>
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary">新增行程</button>
                </form>
            </div>
        }
    </div>

</body>
</html>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
